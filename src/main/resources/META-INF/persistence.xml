<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="cs544">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>edu.mum.week1ExtraCredit.domain.Project</class>
		<class>edu.mum.week1ExtraCredit.domain.Resource</class>
		<class>edu.mum.week1ExtraCredit.domain.Task</class>
		<class>edu.mum.week1ExtraCredit.domain.Volunteer</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="org.gjt.mm.mysql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/cs544" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="wisleo" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="use_sql_comments" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>          


